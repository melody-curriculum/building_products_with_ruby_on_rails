<div class="container small-container well margin-top-40">
  <%= form_tag(author_path(params[:id]), method: :put) do %>
    <div class="bold">
      First Name
    </div>
    <div class="margin-top-10">
      <input name="first_name" type="text" class="form-control" value="" />
      <!-- add a value -->
    </div>
    <div class="bold margin-top-20">
      Last Name
    </div>
    <div class="margin-top-10">
      <input name="last_name" type="text" class="form-control" value="" />
       <!-- add a value -->
    </div>
    <div class="margin-top-20 txt-center">
      <button type="submit" class="btn btn-primary">Save Author</button>
    </div>
  <% end %>
</div>